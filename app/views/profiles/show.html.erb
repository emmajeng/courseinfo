<%= render 'layouts/navbar' %>

<p style="text-align:center" class="notice"><%= notice %></p>
<p style="text-align:center" class="alert"><%= alert %></p>

<div class="form-wrap">
  
  <h2 style="text-align:center">Profile Details</h2>
  
<p>
  <strong>Firstname:</strong>
  <%= @profile.firstname %>
</p>

<p>
  <strong>Lastname:</strong>
  <%= @profile.lastname %>
</p>

<p>
  <strong>Address:</strong>
  <%= @profile.address %>
</p>

<p>
  <strong>Role:</strong>
  <%= @profile.role %>
</p>


<p>
  <strong>Email:</strong>
  <%= @profile.user.email %>
</p>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>

</div>